#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

//====================================

void solve(){
	ll n; cin>>n;
	string st; cin>>st;
	ll f=-1, s=-1;
	ll ans=0;
	for(ll i=0; i<n; ++i){
		if(st[i]=='#'){
			if(f!=-1 && s==-1) ans+=1; 
			if(f!=-1 && s!=-1){
				if(s-f>=2){
					cout<<2 <<'\n';
					return;
				}
				else ans+=2;
			}
			f=-1;
			s=-1;
		}
		else{
			if(f==-1) f=i;
			else s=i;
		}
	}
	if(f!=-1){
		if(s==-1) ans+=1;
		else if(s-f>=2) ans = 2;
		else ans+=2;
	}
	cout<<ans <<'\n';
}


int main(){
	optimize();

	ll t=1;
	cin>>t;
	while(t--)
		solve();
}
