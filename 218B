#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

#define fo(i,n) for(ll i=0; i<n; ++i)
#define Fo(i,k,n) for(ll i=k;k<n?i<n:i>=n;i<n?++i:--i)
#define deb(x) cout<<#x <<"=" <<x <<endl
#define deb2(x,y) cout<<#x <<"=" <<x <<" " <<#y <<"=" <<y <<endl
#define pb push_back
#define mp make_pair
#define F first
#define S second
#define all(x) x.begin(), x.end()
#define allr(x) x.rbegin(), x.rend()
#define endl "\n"

typedef pair<ll,ll>      pl;
typedef vector<ll>       vl;

const int mod = 1e9+7;
const ll N = 1e7+10;
//====================================

void solve(){
    ll n, m; cin>>n >>m;
    vl v(m);
    for(auto &i: v) cin>>i;
    sort(allr(v));

    vl dum=v;
    ll b=0, i=0, count=0;
    fo(i,n){
        sort(allr(dum));
        b+=dum[0];
        --dum[0];
    }
    cout<<b <<' ';

    sort(all(v));
    dum=v;
    ll a=0, j=0, d=n;
    while(d--){
        if(dum[j]){
            a+=dum[j];
            --dum[j];
        }
        else{
            ++j;
            ++d;
        }
    }
    cout<<a <<endl;
}


int main(){
    optimize();

    ll t=1;
    // cin>>t;
    while(t--)
        solve();
}
