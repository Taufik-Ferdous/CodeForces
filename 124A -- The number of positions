#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

//====================================

void solve(){
	ll a, b, c; cin>>a >>b >>c;
	ll ans = 0;
	for(ll i=b+1; i<=a; ++i){
		if((a-i)<=c) ++ans;
	}
	cout<<ans <<'\n';
}


int main(){
	optimize();

	ll t=1;
	// cin>>t;
	while(t--)
		solve();
}
